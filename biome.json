{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "formatWithErrors": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [".next", "node_modules", "dist", "coverage", "public", "output"]
  }
}
